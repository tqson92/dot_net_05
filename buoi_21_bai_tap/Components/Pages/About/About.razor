@page "/"

<PageTitle>About</PageTitle>

<div class="about-container d-flex align-items-center">
	<div class="containter">
		<div class="row user-name-container">
			<div class="col">
				<h1 class="user-name text-upercase">Clarence <span class="user-last-name">Taylor</span></h1>
			</div>
		</div>
		<div class="row user-address-container">
			<div class="col">
				<p class="user-address text-upercase">3542 Berry Street · Cheyenne Wells, CO 80810 · (317) 585-8468 · <a
						class="user-email" href="#">name@email.com</a></p>
			</div>
		</div>
		<div class="row user-about-container">
			<div class="col">
				<p class="user-about">I am experienced in leveraging agile frameworks to provide a robust synopsis for
					high
					level
					overviews.
					Iterative approaches to corporate strategy foster collaborative thinking to further the overall
					value
					proposition.</p>
			</div>
		</div>
		<div>
			@foreach (string Icon in arrIcons)
			{
				<a class="brand-logo" href="">
					<i class="fa-brands @Icon brand-logo-icon"></i>
				</a>
			}
		</div>
	</div>
</div>

@code {
	string[] arrIcons = ["fa-linkedin-in", "fa-square-github", "fa-twitter", "fa-facebook-f"];
}